@import "../../uvue.wxss";
:host{display:flex;flex-direction:column}

.container {
		display: flex;
		flex-direction: column;
		height: 100vh;
		padding: 10px;
		background-color: #f5f5f5;
}

	/* 顶部数据区域样式 */
.data-section {
		background-color: #ffffff;
		border-radius: 10px;
		padding: 10px; /* 减小内边距 */
		margin-bottom: 10px;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
		height: auto; /* 自动调整高度以完整显示内容 */
		min-height: 120px; /* 调整最小高度 */
}
.section-title {
		font-size: 16px;
		font-weight: bold;
		margin-bottom: 8px; /* 增加标题与内容的间距 */
		color: #333;
		display: block;
}
.data-list {
		background-color: #f9f9f9;
		border-radius: 8px;
		overflow: hidden;
		height: auto; /* 自动调整高度 */
}
.data-list-item {
		display: flex;
		justify-content: space-between;
		padding: 6px 10px; /* 减小内边距，减小每行高度 */
		border-bottom: 1px solid #eee;
}
.data-list-item:last-child {
		border-bottom: none;
}
.data-list-label {
		font-size: 13px; /* 减小字体大小 */
		color: #666;
}
.data-list-value {
		font-size: 13px; /* 减小字体大小 */
		font-weight: bold;
		color: #333;
}
	
	/* 中间地图区域样式 */
.map-section {
		flex: 1;
		background-color: #ffffff;
		border-radius: 10px;
		padding: 8px;
		margin-bottom: 8px;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
		display: flex;
		flex-direction: column;
		min-height: 250px;
}
.map-section.expanded {
		min-height: 400px;
}
.map-container {
		flex: 1;
		background-color: #e0e0e0;
		border-radius: 5px;
		overflow: hidden;
}
.map {
		width: 100%;
		height: 100%;
}
	
	/* 骑行信息区域样式（两行布局：第一行全是标题，第二行全是数据） */
.riding-info-simple {
		background-color: #ffffff;
		border-radius: 8px;
		padding: 8px;
		margin-bottom: 8px;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
		overflow-x: auto;
		height: auto;
}
.info-line {
		display: block;
		width: 100%;
		margin-bottom: 6px;
		text-align: center;
		white-space: nowrap;
}
.info-line:last-child {
		margin-bottom: 0;
}
.info-item {
		display: inline-block;
		width: 25%;
		font-size: 11px;
		color: #666;
		text-align: center;
		box-sizing: border-box;
		padding: 0 5px;
}
.info-data {
		display: inline-block;
		width: 25%;
		font-size: 14px;
		color: #333;
		font-weight: 600;
		text-align: center;
		box-sizing: border-box;
		padding: 0 5px;
}
	
	/* 底部按钮区域样式 */
.button-section {
		height: 133px;
		background-color: #ffffff;
		border-radius: 10px;
		padding: 15px;
		margin-bottom: 2.5px;
		box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.button-grid {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
}
.button-corner {
		position: absolute;
		width: 90px;
		height: 40px;
		background-color: #4CAF50;
		border-radius: 8px;
		display: flex;
		justify-content: center;
		align-items: center;
}
	
	/* 调整按钮位置，确保在开始骑行按钮的左右中间对称显示 */
.bottom-left {
		top: 50%; /* 与开始骑行按钮同一垂直位置 */
		transform: translateY(-50%); /* 垂直居中对齐 */
		left: calc(50% - 160px); /* 调整水平位置 */
}
.bottom-right {
		top: 50%; /* 与开始骑行按钮同一垂直位置 */
		transform: translateY(-50%); /* 垂直居中对齐 */
		right: calc(50% - 160px); /* 调整水平位置 */
}
.button-center {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 100px;
		height: 100px;
		background-color: #20e95cff;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}
	
	/* 骑行控制按钮（向下移动，减少与底部导航栏的间距） */
.riding-controls-adjusted {
		display: flex;
		justify-content: center;
		gap: 60px;
		margin-bottom: 5px; /* 减少底部外边距 */
		align-items: center;
		flex-direction: row;
		height: auto;
		padding-top: 5px; /* 增加顶部内边距，保持按钮位置 */
}
.riding-button {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		box-shadow: 0 4px 8px rgba(0,0,0,0.2);
		z-index: 10;
		position: relative;
}
.end-button {
		background-color: #FF5722;
}
.pause-button {
		background-color: #4CAF50;
}
.button-text {
		color: white;
		font-size: 12px;
		text-align: center;
}
.button-text-large {
		color: white;
		font-size: 16px;
		font-weight: bold;
		text-align: center;
}
	
	/* 自由骑按钮样式 */
.free-ride {
		background-color: #FF5722;
}
	
	/* 开始骑行按钮样式 */
.start-riding {
		background-color: #20e95cff;
}
